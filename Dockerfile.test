# Dockerfile for E2E test runner
FROM node:22-slim

WORKDIR /app

# Install curl for debugging (optional)
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Copy test scripts
COPY tests/e2e/ ./tests/e2e/

# Run the test script directly with Node (Node 22 includes fetch and Ed25519 support)
CMD ["node", "tests/e2e/vns-multinode.test.js"]
